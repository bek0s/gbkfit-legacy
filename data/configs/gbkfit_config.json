{
  "datasets": [
    {
      "type": "velmap",
      "data": "../../data/datasets/mock/mock_1/mock_1_velmap_d.fits",
      "error": "../../data/datasets/mock/mock_1/mock_1_velmap_e.fits",
      "mask": "../../data/datasets/mock/mock_1/mock_1_velmap_m.fits"
    },
    {
      "type": "sigmap",
      "data": "../../data/datasets/mock/mock_1/mock_1_sigmap_d.fits",
      "error": "../../data/datasets/mock/mock_1/mock_1_sigmap_e.fits",
      "mask": "../../data/datasets/mock/mock_1/mock_1_sigmap_m.fits"
    }
  ],

  "instrument": {
    "sampling_x": 1.0,
    "sampling_y": 1.0,
    "sampling_z": 10.0,
    "psf": {
      "type": "gaussian",
      "fwhm_x": 2.5,
      "fwhm_y": 2.5,
      "pa": 0
    },
    "lsf": {
      "type": "gaussian",
      "fwhm": 30.0
    }
  },

  "gmodel": {
    "type": "gbkfit.gmodel.gmodel01_cuda",
    "flx_profile": "exponential",
    "vel_profile": "arctan"
  },

  "dmodel": {
    "type": "gbkfit.dmodel.mmaps_cuda",
    "size_x": 49,
    "size_y": 49,
    "size_z": 101
  },

  "fitter": {
    "type": "gbkfit.fitter.mpfit",
    "maxiter": 0
  },

  "parameters": [
    {"name":   "i0", "fixed": 1, "value":   1},
    {"name":   "r0", "fixed": 1, "value":  10},
    {"name": "vsig", "fixed": 0, "value":  50, "min":   1, "max": 100, "step": 0.01},
    {"name": "vsys", "fixed": 0, "value":   0, "min": -50, "max":  50, "step": 0.01},
    {"name":   "xo", "fixed": 0, "value":  24.5, "min":   5, "max":  45, "step": 0.01},
    {"name":   "yo", "fixed": 0, "value":  24.5, "min":   5, "max":  45, "step": 0.01},
    {"name":   "pa", "fixed": 0, "value":  45, "min":   0, "max":  90, "step": 0.01},
    {"name": "incl", "fixed": 0, "value":  20, "min":   5, "max":  85, "step": 0.01},
    {"name":   "rt", "fixed": 0, "value":   4, "min": 0.1, "max":  10, "step": 0.01},
    {"name":   "vt", "fixed": 0, "value": 200, "min":  50, "max": 350, "step": 0.01},
    {"name":    "a", "fixed": 0, "value": 1.0, "min": 0.5, "max": 1.5, "step": 0.01},
    {"name":    "b", "fixed": 0, "value": 1.0, "min": 0.5, "max": 1.5, "step": 0.01}
  ]

}
