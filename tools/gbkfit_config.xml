<?xml version="1.0" encoding="utf-8"?>

<gbkfit>

    <!-- Data information. -->
    <datasets>
        <dataset name="flxmap">
            <data name="data">../../data/flxmap.fits</data>
            <data name="mask">../../data/flxmap_msk.fits</data>
            <data name="error">../../data/flxmap_err.fits</data>
        </dataset>
        <dataset name="velmap">
            <data name="data">../../data/velmap.fits</data>
            <data name="mask">../../data/velmap_msk.fits</data>
            <data name="error">../../data/velmap_err.fits</data>
        </dataset>
        <dataset name="sigmap">
            <data name="data">../../data/sigmap.fits</data>
            <data name="mask">../../data/sigmap_msk.fits</data>
            <data name="error">../../data/sigmap_err.fits</data>
        </dataset>
    </datasets>

    <!-- Instrument information. -->
    <instrument>
        <sampling_x>1.0</sampling_x>
        <sampling_y>1.0</sampling_y>
        <sampling_z>10.0</sampling_z>
        <psf type="gaussian" fwhm="2.5"/>
        <lsf type="gaussian" fwhm="30"/>
    </instrument>

    <!-- Model information. -->
    <model>
        <type>gbkfit.models.model_galaxy_2d_omp</type>
        <profile_flx>exponential</profile_flx>
        <profile_vel>arctan</profile_vel>
    </model>

    <!-- Fitter information. -->
    <fitter>
        <type>gbkfit.fitters.mpfit</type>
        <maxiters>2000</maxiters>
    </fitter>

    <!-- Parameter information. -->
    <parameters>
        <parameter name="vsig" init="60"  fixed="0" min="1" max="200"/>
        <parameter name="vsys" init="0"   fixed="1" min="0" max="0"/>
        <parameter name="xo"   init="10"  fixed="0" min="0" max="32"/>
        <parameter name="yo"   init="10"  fixed="0" min="0" max="32"/>
        <parameter name="pa"   init="90"  fixed="0" min="0" max="360"/>
        <parameter name="incl" init="45"  fixed="0" min="1" max="85"/>
        <parameter name="i0"   init="1"   fixed="1" min="0" max="2"/>
        <parameter name="r0"   init="2"   fixed="1" min="1" max="3"/>
        <parameter name="rt"   init="5"   fixed="0" min="1" max="32"/>
        <parameter name="vt"   init="200" fixed="0" min="1" max="500"/>
    </parameters>

</gbkfit>
