            </dataset>
        </psf>
        <lsf>
            <dataset id="lsfmap">
                <data name="data"  file="../../data/lsfmap.fits[0]"/>
                <data name="mask"  file="../../data/lsfmap.fits[1]"/>
                <data name="error" file="../../data/lsfmap.fits[2]"/>
            </dataset>
        </lsf>
    </instrument>
    -->




    <!-- Parameter information. -->
    <parameters>
        <parameter name="i0"   init="1"   fixed="true"/>
        <parameter name="r0"   init="2"   fixed="true"/>
        <parameter name="vsys" init="50"  min="0"  max="100"/>
        <parameter name="xo"   init="25"  min="0"  max="49"/>
        <parameter name="yo"   init="25"  min="0"  max="49"/>
        <parameter name="pa"   init="0"   min="0"  max="360"/>
        <parameter name="incl" init="45"  min="1"  max="89"/>
        <parameter name="rt"   init="5"   min="1"  max="25"/>
        <parameter name="vt"   init="200" min="10" max="500"/>
        <parameter name="vsig" init="60"  min="1"  max="200"/>
    </parameters>

</gbkfit>
